{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["es2021"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["**/*", ".vitepress/**/*"],
  "exclude": ["node_modules"]
}
